                <!--&lt;!&ndash;                            android:src="@drawable/ic_comment_24" />&ndash;&gt;-->

                <!--&lt;!&ndash;                        <TextView&ndash;&gt;-->
                <!--&lt;!&ndash;                            android:id="@+id/tv_cmtCount"&ndash;&gt;-->
